{
  "name": "linear-tv-ui",
  "version": "0.0.1",
  "description": "Linear TV UI demo",
  "main": "index.js",
  "scripts": {
    "clean": "gulp clean",
    "lint": "xo",
    "build": "npm run lint && gulp build",
    "buildAll": "npm run lint && gulp",
    "start": "forever start index.js",
    "stop": "forever stop index.js",
    "logs": "forever logs index.js",
    "debug": "node-debug index.js --debug-brk",
    "watch": "npm run lint && gulp watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kuu/linear-tv-ui.git"
  },
  "keywords": [
    "Ooyala"
  ],
  "author": "Kuu Miyazaki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kuu/linear-tv-ui/issues"
  },
  "homepage": "https://github.com/kuu/linear-tv-ui#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "browser-sync": "^2.18.13",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-babel": "^7.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.2",
    "gulp-declare": "^0.3.0",
    "gulp-handlebars": "^4.0.0",
    "gulp-htmlmin": "^3.0.0",
    "gulp-imagemin": "^3.4.0",
    "gulp-less": "^3.3.2",
    "gulp-load-plugins": "^1.5.0",
    "gulp-nodemon": "^2.2.1",
    "gulp-notify": "^3.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "gulp-util": "^3.0.8",
    "gulp-wrap": "^0.13.0",
    "nsp": "^2.8.1",
    "rollup-load-plugins": "^0.3.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.4",
    "rollup-stream": "^1.24.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "config": "^1.27.0",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "express-handlebars": "^3.0.0",
    "forever": "^0.15.3",
    "morgan": "^1.9.0",
    "ooyala-api": "^0.13.2",
    "serve-favicon": "^2.4.5"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ],
    "esnext": true,
    "space": true,
    "ignores": [
      "dist/**/*",
      "**/vendor/**/*"
    ],
    "overrides": [
      {
        "files": "frontend/scripts/index.js",
        "globals": [
          "SERVER_CHANNEL_DATA",
          "SERVER_CHANNEL_VIEW",
          "SERVER_TIME_BASE",
          "SERVER_INITIAL_CHANNEL_ID",
          "SERVER_EMBED_CODE",
          "TVApp"
        ]
      }
    ],
    "rules": {
      "camelcase": 0,
      "capitalized-comments": 0,
      "dot-notation": 0,
      "new-cap": 0,
      "no-cond-assign": 0,
      "no-mixed-operators": 0,
      "no-multi-assign": 0,
      "import/no-dynamic-require": 0,
      "unicorn/explicit-length-check": 0,
      "unicorn/filename-case": 0
    }
  }
}
